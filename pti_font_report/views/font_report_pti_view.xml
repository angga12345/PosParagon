<odoo>
    <template id="assets_pti" inherit_id="report.assets_common">
        <xpath expr="//link[@href='/report/static/src/css/report.css']" position="after">
            <style>
               body, table {
                  font-family: Ubuntu;
                  font-size: 14px;
               }

               .table-bordered > thead > tr > td,
               .table-bordered > tbody > tr > td {
                  border: solid black 1px;
               }

               .table > tbody.sale_tbody {
                  border-top: solid black 1px;
               }

               .table > thead {
                  border-top: solid black 1px;
                  border-bottom: solid black 2px;
               }

               .table > tbody.sale_tbody > tr > td {
                  border: solid black 1px;
                  line-height: 1;
                  padding: 5px;
               }

               .table > thead > tr > td {
                  border: solid black 1px;
                  text-align: center;
                  font-weight: bold;
                  padding-left: 2px;
                  padding-right: 2px;
               }
            </style>
        </xpath>
    </template>
</odoo>
