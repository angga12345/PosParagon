<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>      
        <record id="report_wbh_store_category_view" model="ir.ui.view">
            <field name="name">report.wbh.store.category.view</field>
            <field name="model">report.wbh.store.category</field>
            <field name="arch" type="xml">
               <form string="WBH Laporan Penjualan Per Kategori Per Store">
               		<sheet>
               			<label string=""/>  <!-- binding for inherited views -->
               			<group col="1">
	            			<group col="2">
	            				<group >
								   <field name="store" required="1"/>
								   <field name="date_from" required="1"/>
								   <field name="date_to" required="1" invisible="0"/> 		
								</group>                	
		                    </group>
	                    </group>
	                    <group>
	                    	<field name="input_type" invisible="1"/>
	                    </group>              
	                    <field invisible="1" name="state_x"/>
	                    <newline/>    
	                    <group col="4" fill="0" attrs="{'invisible':[('state_x','!=','get')]}">
	                        <separator colspan="4" string="Generate to Excel is done. Download by click link below." attrs="{'invisible':[('state_x','=','choose')]}"/>
	                        <field name="name" invisible="1" width="100" attrs="{'invisible':[('state_x','=','choose')]}"/>
	                        <field name="data_x" nolabel="1" readonly="0" width="100" filename="name" attrs="{'invisible':[('state_x','=','choose')]}" 
	                        style="text-align:left;"/>
	                    </group>
	                    <footer attrs="{'invisible':[('state_x','=','get')]}">
	                        <button name="wbh_store_category_report" string="Generate XLS" type="object" class="oe_highlight"/>
	                        or
	                        <button string="Cancel" class="oe_link" special="cancel" />
	                    </footer>
               		</sheet>
                </form>
            </field>
        </record>
        
        <record id="report_wbh_store_category_action" model="ir.actions.act_window">
            <field name="name">Lap. Penj. Per Kategori Per Store</field>
            <field name="res_model">report.wbh.store.category</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="report_wbh_store_category_view"/>
            <field name="target">new</field>
        </record>
        
        <menuitem
            id="menu_report_wbh_store_category_report" name="Lap. Penj. Per Kategori Per Store"
    		action="report_wbh_store_category_action"
            parent="pti_pos_sale_reporting.menu_wbh_per_store_config" sequence="1"/> 
        
    </data>
</openerp>
