<openerp>
    <data>
    	<record model="ir.ui.view" id="wbh_pos_report_wizard_view">
            <field name="name">wbh.pos.report.wizard.view</field>
            <field name="model">wbh.pos.report.wizard</field>
            <field name="arch" type="xml">
                <form string="Current Bussiness Report" version="9.0">
                	<group>
						<field name="start_period" required="1"/>
						<field name="end_period" required="1"/>	 
						<field name="store" required="1"/>	 					
					</group>
					<field invisible="1" name="state_x"/>
                    <newline/>    
                    <group col="4" fill="0" attrs="{'invisible':[('state_x','!=','get')]}">
                        <separator colspan="4" string="Generate to Excel done. Download by click link below" attrs="{'invisible':[('state_x','=','choose')]}"/>
                        <field name="data_x" nolabel="1" readonly="0" width="100" filename="name" attrs="{'invisible':[('state_x','=','choose')]}"/>
                        <field name="name" nolabel="1" readonly="0" width="100" filename="name" attrs="{'invisible':'1'}"/>
                    </group>
					<footer>
                        <button string="Generate" name="generate_excel_wbh_pos" type="object" class="oe_highlight"/>
                    </footer>
                </form>
            </field>
        </record>
        
