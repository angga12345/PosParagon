<openerp>
	<data>
		<record id="view_account_payment_wizard_form" model="ir.ui.view">
            <field name="name">account.payment.wizard.form</field>
            <field name="model">account.internal.transfer</field>
			<field name="arch" type="xml">
				<form string="Register Payment">
					<sheet>
                        <group>
                            <group>
                                <field name="payment_type" widget="radio"/>
                                <field name="journal_id" widget="selection"/>
                                <field name="destination_journal_id" widget="selection" attrs="{'required': [('payment_type', '=', 'transfer')], 'invisible': [('payment_type', '!=', 'transfer')],}"/>
                                <field name="payment_method_id" string=" " widget="radio"/>
                                <label for="amount"/>
                                <div name="amount_div" class="o_row" widget="monetery">
                                    <field name="amount"/>
                                    <field name="currency_id" options="{'no_create': True, 'no_open': True}" groups="base.group_multi_currency"/>
                                </div>
                            </group>
                            <group>
                                <field name="payment_date"/>
                                <field name="communication"/>
                            </group>
                        </group>
                    </sheet>
                    <footer>
                        <button string='Save' name="bank_statement_action" type="object" class="btn-primary"/>
                        <button string="Cancel" class="btn-default" special="cancel"/>
                    </footer>
				</form>
			</field>
		</record>
	</data>
</openerp>