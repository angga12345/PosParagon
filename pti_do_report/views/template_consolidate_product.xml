<openerp>
   <data>

      <template id="report_consolidate_product">
         <t t-foreach="docs" t-as="o">
            <div class="row">
               <t t-call="pti_do_report.report_consolidate_product_body"/>
            </div>
         </t>
      </template>

      <template id="report_consolidate_product_body">
         <t t-call="report.html_container">
            <div class="page">
                  <div class="container" position="fixed">
                  	
                     <div class="col-xs-6">
                     <p style="font-weight: bold; font-size: 24px;">
                        Consolidate Product
                     </p> 
                     <br/>
                     <p style="font-weight: bold;"> Date : <span t-field="o.date_consolidate"/></p>
                     <p style="font-weight: bold;"> Brand : <span t-field="o.brand_consolidate"/></p>
                     </div>
                     <br/>

                     <table class="table table-bordered" style="border-color: #004269;">
                        <thead>
                           <tr>
							<td style="width: 70%;  ">Name</td>
							<td style="width: 30%; ">Quantity</td>
                           </tr>
                        </thead>
                        <tbody class="sale_tbody">
                           <tr t-foreach="o.picking" t-as="picking">
                                 <td> <span t-field="picking.product_id"/> </td>
                                 <td style="text-align: right;"> <span t-esc="'{0:,.0f}'.format((picking.tot_qty))"/> </td>
                           </tr>
                        </tbody>
                     </table>


                  </div>
            </div>
				<!--footer number-->            
			<div class="footer">
		    	<div style="margin-top:30px;" class="row">
		        	<div class="col-xs-5">
		            		<small style="margin-top:20px;">
								<span>Page <span class="page"/> of <span class="topage"/></span>
							</small>
		        	</div>
		    	</div>
			</div>
         </t>
      </template>
   </data>
</openerp>
