<openerp>
<data>
	<template id="report_inv">
	<t t-name="pti_invoice_report.report_inv">
   		<t t-call="report.html_container"/>
   		<!-- <t t-call="report.external_layout"/> -->
   		<t t-foreach="docs" t-as="o">
	   		<div class="page">
        		<div class="container" position="fixed">
              		<div class="col-xs-5 col-xs-offset-7" style="font-weight: bold; font-size: 24px; margin-bottom: 5px;">
                        <t t-if="o.type == 'out_invoice' ">INVOICE</t>
                        <t t-if="o.type == 'out_refund' ">CREDIT NOTE</t>
                    </div>
		            <div class="col-xs-6">
		                <p style="font-weight: bold; border-bottom: 1px solid">BILL TO :</p>
		                <t>
								 <p style="margin-left: 2px; margin-bottom: 0px">
									 <span t-field="o.partner_id.name"/>
									 <![CDATA[&nbsp;]]>
								 </p>
								 <p style="margin-left: 2px; margin-bottom: 0px">Customer ID: <span t-field="o.partner_id.ref"/> </p>
		                    <t t-if="o.partner_id.parent_id and o.partner_id.parent_id.email">
									  <p style="margin-left: 2px; margin-bottom: 0px">
										  Email: <span t-field="o.partner_id.parent_id.email"/>
										  <![CDATA[&nbsp;]]>
									  </p>
		                    </t>
		                    <t t-if="(not o.partner_id.parent_id) and o.partner_id.email">
		                        <p style="margin-left: 2px; margin-bottom: 0px">
		                            Email: <span t-field="o.partner_id.email"/>
											 <![CDATA[&nbsp;]]>
		                        </p>
		                    </t>
		                    <p style="margin-left: 2px; margin-bottom: 0px"> <span t-field="o.partner_id.street"/> <span t-field="o.partner_id.street2"/> </p>
		                    <p style="margin-left: 2px; margin-bottom: 0px"> <span t-field="o.partner_id.city"/>, <span t-field="o.partner_id.zip"/> </p>
									<t t-if="o.partner_id.mobile">
										<p style="margin-left: 2px; margin-bottom: 0px"> Phone: <span t-field="o.partner_id.mobile"/> </p>
									</t>
									<t t-if="o.partner_id.fax">
										<p style="margin-left: 2px; margin-bottom: 0px"> Fax: <span t-field="o.partner_id.fax"/> </p>
									</t>
		                    <p style="margin-left: 2px; margin-bottom: 0px">
		                        <t t-if="o.partner_id.parent_id">
		                            <span t-field="o.partner_id.parent_id.npwp"/>
		                        </t>
		                        <t t-if="not o.partner_id.parent_id">
		                            NPWP: <span t-field="o.partner_id.npwp"/>
		                        </t>
		                    </p>
		                </t>
		                <p/>

							<!-- NOTE: Right now, we don't have information regarding the shipment.-->
		                <!-- <p style="font-weight: bold; border-bottom: 1px solid">SHIP TO:</p>
		                <t t-if="o.partner_id.parent_id and o.partner_id.parent_id.email">
		                    <p style="margin-left: 2px; margin-bottom: 0px"> <span t-field="o.partner_id.name"/> </p>
		                    <p style="margin-left: 2px; margin-bottom: 0px">
		                        <span t-field="o.partner_id.parent_id"/> Email: <span t-field="o.partner_id.parent_id.email"/>
		                    </p>
		                </t>
		                <t t-if="(not o.partner_id.parent_id) and o.partner_id.email">
		                    <p style="margin-left: 2px; margin-bottom: 0px">
		                        <span t-field="o.partner_id"/> Email: <span t-field="o.partner_id.email"/>
		                    </p>
		                </t>
		                <p style="margin-left: 2px; margin-bottom: 0px"> <span t-field="o.partner_id.street"/> <span t-field="o.partner_id.street2"/> </p>
		                <p style="margin-left: 2px; margin-bottom: 0px"> <span t-field="o.partner_id.city"/>, <span t-field="o.partner_id.zip"/> </p>
		                <p style="margin-left: 2px; margin-bottom: 0px">Phone: <span t-field="o.partner_id.mobile"/></p>
							 <p style="margin-left: 2px; margin-bottom: 0px">Fax: <span t-field="o.partner_id.fax"/> </p>
		                <p/> -->

		            </div>
			        <div class="col-xs-6">
		                <div class="col-xs-6" style="text-align:right">Doc No: </div>
							 <div class="col-xs-6">
								 <t t-if="o.number">
								 	<span t-field="o.number"/>
								</t>
								<![CDATA[&nbsp;]]>
							 </div>
						<div class="col-xs-6" style="text-align:right">Source Document : </div>
							 <div class="col-xs-6">
							 	<t t-if="o.type == 'out_refund' ">
							 		<t t-if="o.origin">
								 	<span t-field="o.origin"/>
									</t>
							 	</t>
								 
								<![CDATA[&nbsp;]]>
							 </div>
						<t t-foreach="get_sale_order(o)" t-as="sale_info">
							<div class="col-xs-6" style="text-align:right">Sales Order: </div>
			                <div class="col-xs-6">
			                    <span t-esc="sale_info['sale_order']"/><![CDATA[&nbsp;]]>
			                </div>
			                <div class="col-xs-6" style="text-align:right">Customer PO No: </div>
			                <div class="col-xs-6">
			                    <span t-esc="sale_info['customer_po']"/><![CDATA[&nbsp;]]>
			                </div>
		                </t>
		                <div class="col-xs-6" style="text-align:right">Date: </div>
		                <div class="col-xs-6">
		                    <span t-field="o.date_invoice"/><![CDATA[&nbsp;]]>
		                </div>
		                <div class="col-xs-6" style="text-align:right">Term of Payment: </div>
		                <div class="col-xs-6">
		                    <span t-field="o.payment_term_id.name"/>
								  <![CDATA[&nbsp;]]>
		                </div>
		                <div class="col-xs-6" style="text-align:right">Inco Terms: </div>
		                <div class="col-xs-6">
		                    <![CDATA[&nbsp;]]>
		                </div>
		                <div class="col-xs-6" style="text-align:right">Currency: </div>
		                <div class="col-xs-6">
		                    <span t-field="o.currency_id.name"/>
								  <![CDATA[&nbsp;]]>
		                </div>
		                <div class="col-xs-6" style="text-align:right">Distribution Center: </div>
		                <div class="col-xs-6">
		                    <t t-if="not o.dc_id.name">
		                            -
		                    </t>
		                    <t t-if="o.dc_id.name">
		                    	<span t-field="o.dc_id.name"/>
								  <![CDATA[&nbsp;]]>
		                    </t>
		                </div>
		            </div>

            <div class="row">
               <div class="col-xs-12">
		            <table class="table table-bordered">

		                  <thead>
		                      <tr>
		  						<td style="width: 5%; ">No</td>
								<td style="width: 10%; ">Item Code</td>
		  						<td style="width: 25%; ">Item Description</td>
								<td style="width: 10%; ">Unit Price</td>
		  						<td style="width: 5%; ">Qty</td>
								<td style="width: 5%; ">UOM</td>
								<td style="width: 10%; ">Disc Volume</td>
								<td style="width: 10%; ">Add Disc</td>
								<td style="width: 10%; ">Disc Program</td>
								<td style="width: 10%; ">Price After Disc</td>
		  					</tr>
		                 </thead>

		               <tbody class="sale_tbody">
		               		<t t-set="no" t-value="1"/>
							<t t-set="price_total" t-value="0"/>
		                 		<tr t-foreach="get_lines(o)" t-as="line">
		                 			<t>
		                                <t t-if="not line.get('is_free')">
		                                	  <td width="5%"  class="text-right"> <span t-esc="no"/> <t t-set="no" t-value="no+1"/></td>
	                                          <td> <span t-esc="line.get('product_code')"/> </td>
	                                          <td> <span t-esc="line.get('product_name')"/> </td>
	                                          <td class="text-right">
	                                             <span t-esc="'{0:,.2f}'.format(line.get('price_unit'))"/>
	                                          </td>
	                                          <td class="text-right"> <span t-esc="'{0:,.0f}'.format(line.get('product_qty'))"/> </td>
	                                          <td> <span t-esc="line.get('product_uom')"/> </td>
	                                          <td class="text-right">
	                                             <span t-esc="'{0:,.2f}'.format(line.get('tot_disc_volume'))"/>
	                                          </td>
	                                          <td class="text-right">
	                                             <span t-esc="'{0:,.2f}'.format(line.get('tot_disc_add'))"/>
	                                          </td>
	                                          <td class="text-right">
	                                             <span t-esc="'{0:,.2f}'.format(line.get('tot_disc_program'))"/>
	                                          </td>
	                                          <td class="text-right">
	                                             <span t-esc="'{0:,.2f}'.format(line.get('price_subtotal'))"/>
	                                          </td>
                                          </t>
                                          <t t-if="line.get('is_free')">
                                          	  <td width="5%"  class="text-right"></td>
                                          	  <td> <span t-esc="line.get('product_code')"/> </td>
	                                          <td colspan="7"> <span t-esc="line.get('product_name')"/> </td>
	                                          <td class="text-right">
	                                             <span t-esc="'{0:,.2f}'.format(line.get('price_subtotal'))"/>
	                                          </td>
                                      	  </t>
		                 			</t>
		  					</tr>
		                  </tbody>
		             </table>

				  <table align="right" width="30%">
					    <tr>
					    	<td style="width=20%;"> Subtotal</td>
					    	<td style="width: 10%" align="right"><span t-esc="'{0:,.2f}'.format(get_order_subtotal())"/></td>
					    </tr>
					    <tr>
					    	<td style="width=20%;"> Total Discount Volume</td>
					    	<td style="width: 10%; border-bottom: 1px solid" align="right">
					    		<t t-if="get_order_disc_volume() &gt; 0">
                            		-<span t-esc="'{0:,.2f}'.format(get_order_disc_volume())"/>
                            	</t>
                            	<t t-if="get_order_disc_volume() == 0">
                            		0.00
                            	</t>
					    	</td>
					    </tr>
					    <tr>
					    	<td style="width=20%;"> <font color="white"> . </font> </td>
					    	<td style="width: 10%" align="right"> <font color="white"> . </font> </td>
					    </tr>
					    <tr>
					    	<td style="width=20%;"> Total Additional Discount</td>
					    	<td style="width: 10%" align="right">
					    		<t t-if="get_order_disc_add() &gt; 0">
                            		-<span t-esc="'{0:,.2f}'.format(get_order_disc_add())"/>
                            	</t>
                            	<t t-if="get_order_disc_add() == 0">
                            		0.00
                            	</t>
					    	</td>
					    </tr>
					    <tr>
					    	<td style="width=20%;"> Total Discount Program</td>
					    	<td style="width: 10%" align="right">
					    		<t t-if="get_order_disc_program() &gt; 0">
                            		-<span t-esc="'{0:,.2f}'.format(get_order_disc_program())"/>
                            	</t>
                            	<t t-if="get_order_disc_program() == 0">
                            		0.00
                            	</t>
					    	</td>
					    </tr>
					    <tr>
					    	<td style="width=20%;"> Distribution Fee</td>
					    	<td style="width: 10%; border-bottom: 1px solid" align="right"><span t-esc="'{0:,.2f}'.format(0)"/></td>
					    </tr>
					    <tr>
					    	<td style="width=30%;"> <font color="white"> . </font> </td>
					    	<td style="width: 10%" align="right"> <font color="white"> . </font> </td>
					    </tr>
		                <t t-set="no" t-value="1"/>
		                <tr t-foreach="get_order_disc_global()" t-as="line">
					    	<td> Discount - <span t-esc="line.get('name_discount')"/> </td>
					    	<td style="width: 125px;" align="right">
					    		<t t-if="line.get('discount_value') &gt; 0">
                            		-<span t-esc="'{0:,.2f}'.format(line.get('discount_value'))"/>
                            	</t>
                            	<t t-if="line.get('discount_value') == 0">
                            		0.00
                            	</t>
					    	</td>
		                </tr>
		                <tr>
					    	<td style="width=20%;"> Freight</td>
					    	<td style="width: 10%; border-bottom: 1px solid" align="right"><span t-esc="'{0:,.2f}'.format(0)"/></td>
					    </tr>
		                <tr>
					    	<td style="width=20%;"> Net Price</td>
					    	<td style="width: 10%" align="right"><span t-esc="'{0:,.2f}'.format(get_order_net())"/></td>
					    </tr>
		                <tr>
					    	<td style="width=20%;"> PPN 10%</td>
					    	<td style="width: 10%; border-bottom: 1px solid" align="right"><span t-esc="'{0:,.2f}'.format(get_order_tax())"/></td>
					    </tr>
		                <tr>
					    	<td style="width=20%;"> <strong>TOTAL</strong> </td>
					    	<td style="width: 10%; border-bottom: 2px double" align="right"><span t-esc="'{0:,.2f}'.format(get_order_total())"/></td>
					    </tr>
	           	  </table>
	           	  <div class="col-xs-12">(In words : <span t-esc="get_order_total_text()"/>)</div>
               </div>
            </div>
					<hr style="width: 100%;"></hr>
		            <div class="col-xs-6">
		                <p>
		                    Note:
		                    <li>Please state the invoice number and your company name when you make the payment</li>
		                    <li>This Invoice is Computer generated. No signature required</li>
		                </p>
		            </div>
			<div class="col-xs-5 col-xs-offset-1">
                <div class="col-xs-12">Document Distribution:</div>
                <div class="col-xs-5">Original (White)</div>
                <div class="col-xs-7">: For Invoicing</div>
                <div class="col-xs-5">Copy 1 (Orange)</div>
                <div class="col-xs-7">: For Finance Head Office</div>
                <div class="col-xs-5">Copy 2 (Pink)</div>
                <div class="col-xs-7">: Copy for Customer</div>
                <div class="col-xs-5">Copy 3 (Yellow)</div>
                <div class="col-xs-7">: Filing at Distribution Center</div>
			</div>
			</div>
			<p style="color:#fff;"><span t-esc="set_notify(o)"/></p>
       </div>
	</t>
</t>
</template>
</data>
</openerp>