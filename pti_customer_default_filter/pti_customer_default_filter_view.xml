<openerp>
    <data>
	   <record model="ir.ui.view" id="filter_DC_inventory">
			<field name="name">filter.inventory</field>
			<field name="model">stock.picking.type</field>
			<field name="groups_id" eval="[(6, 0, [ref('pti_branch.group_pti_branch_customer_order') ])]"/>
			<field name="inherit_id" ref="stock.view_pickingtype_filter"/>
			<field name="arch" type="xml">
     			<xpath expr="//field[@name='name']" position="after">
					<filter name="filter_inventory" string="DC inventory" domain="[('warehouse_id.dc_id.user_ids','=',uid)]"/> 
     				<filter name="filter_dc" string="DC Operations" domain="[('warehouse_id.partner_id.is_dc','=',True)]"/>
					<filter name="filter_consignment" string="Consignment Operations" domain="['|',('default_location_dest_id.partner_id.is_consignment','=',True),('default_location_src_id.partner_id.is_consignment','=',True)]"/>
					<filter name="filter_mobile" string="MW Operations" domain="['|',('default_location_dest_id.partner_id.is_team_leader','=',True),('default_location_src_id.partner_id.is_team_leader','=',True)]"/>					
				</xpath>
     		</field>	
	  </record>       

        <record id="stock.stock_picking_type_action" model="ir.actions.act_window">
            <field name="name">Inventory</field>
            <field name="res_model">stock.picking.type</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_type">form</field>
            <field name="view_mode">kanban,form</field>
            <field name="context">{'search_default_filter_dc': True}</field>
            <field name="help" type="html">
              <p class="oe_view_nocontent_create">
                Click to create a new picking type.
              </p><p>
                The picking type system allows you to assign each stock
                operation a specific type which will alter its views accordingly.
                On the picking type you could e.g. specify if packing is needed by default,
                if it should show the customer.
              </p>
            </field>
        </record>
  

    </data>
    </openerp>
