<openerp>
    <data>
    	<record model="ir.ui.view" id="laporan_item_qty_report_wizard_view">
            <field name="name">laporan.item.qty.report.wizard.view</field>
            <field name="model">laporan.item.qty.report.wizard</field>
            <field name="arch" type="xml">
                <form string="Lap. Penj. Per Item Qty per Store" version="9.0">
                	<group>
                		<field name="filter" required="True"/>
               			<field name="brand_id" attrs="{'invisible':[('filter','in',('1',False))], 'required':[('filter','=','2')]}"/>
               			<field name="start_period" required="1"/>
						<field name="end_period" required="1"/>	 					
					</group>
					<field invisible="1" name="state_x"/>
                    <newline/>    
                    <group col="4" fill="0" attrs="{'invisible':[('state_x','!=','get')]}">
                        <separator colspan="4" string="Generate to Excel done. Download by click link below" attrs="{'invisible':[('state_x','=','choose')]}"/>
                        <field name="data_x" nolabel="1" readonly="0" width="100" filename="name" attrs="{'invisible':[('state_x','=','choose')]}"/>
                        <field name="name" nolabel="1" readonly="0" width="100" filename="name" attrs="{'invisible':[('state_x','=','choose')]}"/>
                    </group>
					<footer>
                        <button string="Generate" name="generate_excel" type="object" class="oe_highlight"/>
                    </footer>
                </form>
            </field>
        </record>
    	
        <record id="action_laporan_item_qty_report_wizard" model="ir.actions.act_window">
            <field name="name">Lap. Penj. Per Item Qty per Store</field>
            <field name="res_model">laporan.item.qty.report.wizard</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>
        
        
    	<menuitem
            id="menu_laporan_item_qty_report" name="Lap. Penj. Per Item Qty per Store"
    		action="action_laporan_item_qty_report_wizard"
            parent="pti_pos_sale_reporting.menu_mds_nasional_config" sequence="1"/>
    </data>
</openerp>