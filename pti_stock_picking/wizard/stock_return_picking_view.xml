<openerp>
    <data>
        
		<record id="stock_return_picking_manual_input" model="ir.ui.view">
    		<field name="name">stock.return.picking.manual.input</field>
    		<field name="model">stock.return.picking</field>
            <field name="inherit_id" ref="stock.view_stock_return_picking_form"/>
            <field name="arch" type="xml">
				<xpath expr="/form/group[1]" position="before">
                    <group>
                        <field name="picking_id" invisible="1" on_change="onchange_picking_id(picking_id)"/>
                        <field name="all_product" on_change="onchange_all_product(all_product, picking_id)"/>
                        <field name="product_ids" widget="many2many_tags" on_change="onchange_product_ids(product_ids, picking_id)"/>
                    </group>
                </xpath>
                <field name="product_return_moves" position="replace">
                    <field name="product_return_moves" nolabel="1">
                        <tree editable="top" create="0">
                            <field name="move_id" invisible="1"/>
                            <field name="product_id" readonly="1"/>
                            <field name="quantity"/>
                        </tree>
                    </field>
                </field>
                <field name="location_id" position="after">
                	<field name="is_loc_name" invisible="1"/>
                	<field name="retur_reason" attrs="{'invisible':[('is_loc_name', '=', False)]}"/>
                </field>
            </field>
    	</record>
    </data>
</openerp>
