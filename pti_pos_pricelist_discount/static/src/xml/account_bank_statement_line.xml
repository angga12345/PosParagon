<?xml version="1.0" encoding="UTF-8"?>
<templates id="pos_payment_acc" inherit_id="pti_pos_pricelist_discount.pos_payment">

<t t-extend="PaymentScreen-Paymentlines">
    	<t t-jquery="thead" t-operation="replace">
    		<thead>
                    <tr class='label'>
                        <th>Due</th>
                        <th>Tendered</th>
                        <th>Change</th>
                        <th>Method</th>
                        <th></th>
                        
                    </tr>
                </thead>
    		
    	</t>
    	<t t-jquery="tbody" t-operation="replace">
    		
    		<tbody>
                    <t t-foreach='paymentlines' t-as='line'>
                    	
                        <t t-if='line.selected'>
                        	
                            <tr class='paymentline selected'>
                           
                                <td class='col-due'> <t t-esc='widget.format_currency_no_symbol(order.get_due(line))' /> </td>
                                <!--Buka PAY-->
                                <t t-if="widget.pay_mode == 'true' ">
	                                <td id="pay" class='col-tendered edit'> 
	                                    <t t-esc='widget.inputbuffer' />     
	                                </td>
                                </t>
                                
                                <!--Tutup PAY-->
                                <t t-if="widget.pay_mode == 'false' ">
	                                <td id="pay" > 
	                                    <t t-esc='widget.inputbuffer' />
	                                </td>
                                </t>
                                
                                <t t-if='order.get_change(line)'>
                                    <td class='col-change highlight' > 
                                        <t t-esc='widget.format_currency_no_symbol(order.get_change(line))' />
                                    </td>
                                </t>
                                <t t-if='!order.get_change(line)'>
                                    <td class='col-change' ></td>
                                </t>
                                    
                                <td class='col-name' > <t t-esc='line.name' /> </td>
                                <td class='delete-button' t-att-data-cid='line.cid'> <i class='fa fa-times-circle' /> </td>
                            </tr>
                            <tr class='paymentline selected'>
								<t t-if="line.cashregister.journal.type == 'bank' ">
									<td>Batch No :</td>	 
									<t t-if="widget.batch_mode == 'true' ">
				            			<td id='input_batch' colspan='3' class='col-tendered edit' > 
	                                 	<t t-esc='widget.inputbatchnobuffer' />
	                                   	</td>
	                                </t>  
	                                <t t-if="widget.batch_mode == 'false' ">
					            	   <td id='input_batch' colspan='3' > 
		                               <t t-esc='widget.inputbatchnobuffer' />
	                                   </td>
	                                </t> 
                                </t>
                               
			            	</tr>
			            	<tr class='paymentline selected'>
								<t t-if="line.cashregister.journal.type == 'bank' ">
									<td>Trace No :</td>	 
									 <t t-if="widget.trace_mode == 'true'">
				            			<td id='input_trace' colspan='3' class='col-tendered edit' > 
	                                 	<t t-esc='widget.inputtracenobuffer' />
	                                   	</td>
	                                 </t>
	                                 
	                                 <t t-if="widget.trace_mode == 'false'">
				            			<td id='input_trace' colspan='3'> 
	                                 	<t t-esc='widget.inputtracenobuffer' />
	                                   	</td>
	                                 </t>
                                </t>
			            	</tr>
			            	<tr class='paymentline selected'>
								<t t-if="line.cashregister.journal.type == 'bank' ">
									<td>Appr Code:</td>	 
									 <t t-if="widget.apprcode_mode == 'true'">
				            			<td id='input_apprcode' colspan='3' class='col-tendered edit' > 
	                                 	<t t-esc='widget.inputapprcodebuffer' />
	                                   	</td>
	                                 </t>
	                                 
	                                 <t t-if="widget.apprcode_mode == 'false'">
				            			<td id='input_apprcode' colspan='3'> 
	                                 	<t t-esc='widget.inputapprcodebuffer' />
	                                   	</td>
	                                 </t>
                                </t>
			            	</tr>
                        </t>
                        <t t-if='!line.selected'>
                            <tr class='paymentline' t-att-data-cid='line.cid'>
                                <td class='col-due'> <t t-esc='widget.format_currency_no_symbol(order.get_due(line))' /> </td>
                                <td class='col-tendered'> <t t-esc='widget.format_currency_no_symbol(line.get_amount())' /> </td>
                                <td class='col-change'> 
                                    <t t-if='order.get_change(line)'>
                                        <t t-esc='widget.format_currency_no_symbol(order.get_change(line))' />
                                     </t>
                                </td>
                                <td class='col-name'> <t t-esc='line.name' /> </td>
                                <td class='delete-button' t-att-data-cid='line.cid'> <i class='fa fa-times-circle' /> </td>
                            </tr>
                        </t>
                    </t>
                    <t t-if='extradue'>
                        <tr class='paymentline extra' t-att-data-cid='0'>
                            <td class='col-due'> <t t-esc='widget.format_currency_no_symbol(extradue)' /> </td>
                        </tr>
                    </t>
                </tbody>
    	</t>
    	
    	
    </t>

</templates>
