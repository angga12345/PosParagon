<openerp>
    <data>
        <record id="view_filter_bank_reconcile_form" model="ir.ui.view">
            <field name="name">filter.bank.reconcile.wizard.form</field>
            <field name="model">filter.bank.reconcile</field>
            <field name="arch" type="xml">
                <form string="Register Payment">
                   <group>
                        <group>
                            <field name="use_filter"/>
                        </group>
                        <group>
                            <field name="partner_id" 
                                attrs="{'invisible': [('use_filter', '&lt;&gt;', True)]}"/>
                            <field name="memo" 
                                attrs="{'invisible': [('use_filter', '&lt;&gt;', True)]}"/>
                        </group>
                    </group>
                    <footer>
                        <button string='Reconcile' name="action_filter_bank_reconcile" type="object" class="btn-primary"/>
                        <button string="Cancel" class="btn-default" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
        <record id="action_filter_bank_reconcile_form" model="ir.actions.act_window">
            <field name="name">Filter Bank Statement Reconcile</field>
            <field name="res_model">filter.bank.reconcile</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
           <field name="view_id" ref="view_filter_bank_reconcile_form"/>
           <field name="target">new</field>
        </record>

    </data>
</openerp>