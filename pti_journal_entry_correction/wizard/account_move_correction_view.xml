<openerp>
    <data>

        <record id="view_account_move_correction" model="ir.ui.view">
            <field name="name">account.move.correction.form</field>
            <field name="model">account.move.correction</field>
            <field name="arch" type="xml">
                <form string="Account Move Correction">
                    <group col="4">
                        <field name="date"/>
                        <field name="journal_id"/>
                        <field name="partner_id"/>
                    </group>
                    <footer>
                        <button string="Correct Moves" name="reverse_moves" type="object" class="btn-primary"/>
                        <button string="Cancel" class="btn-default" special="cancel"/>
                    </footer>
               </form>
            </field>
        </record>

        <record id="action_view_account_move_correction" model="ir.actions.act_window">
            <field name="name">Correct Moves</field>
            <field name="res_model">account.move.correction</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_account_move_correction"/>
            <field name="target">new</field>
        </record>

        <record model="ir.values" id="action_account_move_correction">
            <field name="model_id" ref="account.model_account_move" />
            <field name="name">Correct Moves</field>
            <field name="key2">client_action_multi</field>
            <field name="value" eval="'ir.actions.act_window,' +str(ref('action_view_account_move_correction'))" />
            <field name="key">action</field>
            <field name="model">account.move</field>
        </record>
    </data>
</openerp>
