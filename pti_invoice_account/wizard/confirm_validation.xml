<openerp> 
    <data> 
        <record id="confirm_validation_form" model="ir.ui.view">
             <field name="name">confirm.validation.form</field> 
             <field name="model">confirm.validation</field> 
             <field name="arch" type="xml"> 
                 <form string="Confirmation">
                    <p>Are you sure to close bank statement ?</p>
                    <footer>
                        <button name="do_validation" type="object" context="{'next': True}" string="Validate" class="oe_highlight"/>
                        <button string="Cancel" class="btn-default" special="cancel"/>
                    </footer> 
                 </form> 
            </field>
        </record>
    
        <record model="ir.actions.act_window" id="action_confirm_validation">
            <field name="name">Confirm Validation</field>
            <field name="res_model">confirm.validation</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="confirm_validation_form" />
            <field name="target">new</field>
        </record>
    </data>
</openerp>

