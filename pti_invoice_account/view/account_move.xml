<openerp>
    <data>
        <record id="pti_view_move_form" model="ir.ui.view">
            <field name="name">pti.account.move.form</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml"> 
            	<field name="partner_id" position="attributes">
                	<attribute name="domain">[('is_dc', '=', False)]</attribute>
                </field>
            	<field name="partner_id" position="after">
                	 <field name="dc_id" domain="[('is_dc', '=', True)]"/>
                </field>
                <field name="debit" position="before">
                	<field name="symbol" readonly="1"/>
                </field>
                <field name="credit" position="before">
                	<field name="symbol" readonly="1"/>
                </field>
                <xpath expr="//notebook/page/field/tree/field[@name='name']" position="after">
                	<field name="partner_id" domain="[('is_dc', '=', False)]"/>
                	<field name="dc_id" domain="[('is_dc', '=', True)]"/>
                </xpath>
        	</field>
        </record>

        <record id="pti_view_move_line_tree" model="ir.ui.view">
            <field name="name">pti.account.move.line.form</field>
            <field name="model">account.move.line</field>
            <field name="inherit_id" ref="account.view_move_line_form"/>
            <field name="arch" type="xml"> 
            	<field name="date" position="after">
                	 <field name="dc_id"/>
                </field>
        	</field>
        </record>
        
        <record id="pti_view_account_move_filter" model="ir.ui.view">
            <field name="name">account.move.select</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_account_move_filter"/>
            <field name="arch" type="xml">
                <field name="partner_id" position="after">
                	 <field name="dc_id"/>
                 	 <field name="year"/>
                	 <field name="month"/>
                </field>
            </field>
        </record>
        
		<!--   Deleted group activate developer mode for menu journal items   -->
		<record model="ir.ui.menu" id="account.menu_action_account_moves_all">
			<field name="groups_id" eval="[(3,ref('base.group_no_one'))]"/>
		</record>
        
        <record id="pti_view_account_move_line_filter" model="ir.ui.view">
            <field name="name">account.move.line.select</field>
            <field name="model">account.move.line</field>
            <field name="inherit_id" ref="account.view_account_move_line_filter"/>
            <field name="arch" type="xml">
                <field name="partner_id" position="after">
                	 <field name="dc_id"/>
                	 <field name="year"/>
                	 <field name="month"/>
                </field>
            </field>
        </record>        
    </data>
</openerp>
