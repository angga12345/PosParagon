<openerp>
    <data>
    		
        <record id="action_cancelation_invoice" model="ir.actions.act_window">
            <field name="name">Cancellation Invoice</field>
            <field name="res_model">account.invoice</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">['|', '&amp;',('type','=','out_invoice'),('state_refund','=','refund'), '&amp;',('type','=','out_refund'),('state_refund','=','done')]</field>
            <field name="context">{'default_type': 'out_refund', 'type': 'out_refund', 'journal_type': 'sale'}</field>
            <field name="view_id" ref="account.invoice_tree"/>         
            <field name="help" type="html">
              <p class="oe_view_nocontent_create">
                Click to create Cancelation Invoice
              </p>
            </field>
        </record>
    	<record model="ir.actions.act_window.view" id="action_cancelation_invoice_tree">
            <field name="view_mode">tree</field>
            <field name="view_id" ref="account.invoice_tree"/>
            <field name="act_window_id" ref="action_cancelation_invoice"/>
        </record>    
        <record model="ir.actions.act_window.view" id="action_cancelation_invoice_form">
            <field name="view_mode">form</field>
            <field name="view_id" ref="account.invoice_form"/>
            <field name="act_window_id" ref="action_cancelation_invoice"/>
        </record>
    	<menuitem action="action_cancelation_invoice" 
			          id="cancelation_invoice_menuitem" 
			          name="Cancellation Invoice"  		
			          parent="account.menu_finance_receivables" sequence="2"/>

        <record id="action_cancelation_credit_note" model="ir.actions.act_window">
            <field name="name">Cancellation Credit Note</field>
            <field name="res_model">account.invoice</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">['|', '&amp;',('type','=','out_refund'),('state_refund','=','refund'), '&amp;',('type','=','out_invoice'),('state_refund','=','done')]</field>
            <field name="context">{'default_type': 'out_refund', 'type': 'out_refund', 'journal_type': 'sale'}</field>
            <field name="view_id" ref="credit_note_tree"/>         
            <field name="help" type="html">
              <p class="oe_view_nocontent_create">
                Click to create Cancelation Invoice
              </p>
            </field>
        </record>
    	<record model="ir.actions.act_window.view" id="action_cancelation_credit_note_tree">
            <field name="view_mode">tree</field>
            <field name="view_id" ref="credit_note_tree"/>
            <field name="act_window_id" ref="action_cancelation_credit_note"/>
        </record>    
        <record model="ir.actions.act_window.view" id="action_cancelation_credit_note_form">
            <field name="view_mode">form</field>
            <field name="view_id" ref="credit_note_form"/>
            <field name="act_window_id" ref="action_cancelation_credit_note"/>
        </record>
    	<menuitem action="action_cancelation_credit_note" 
			          id="cancelation_credit_note_menuitem" 
			          name="Cancellation Credit Note"  
			          parent="account.menu_finance_receivables" sequence="2"/>
    	
    </data>
</openerp>    	