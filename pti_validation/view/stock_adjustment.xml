<openerp>
    <data>
    	<record id="view_inventory_adjustment_custom" model="ir.ui.view">
    		<field name="name">view.inventory.adjustment.custom</field>
    		<field name="model">stock.inventory</field>
            <field name="inherit_id" ref="stock.view_inventory_form"/>
            <field name="arch" type="xml">
            	<!--    Start Inventory     -->
            	<xpath expr="//form/header/button[@name='prepare_inventory']" position="replace">
            		<button name="prepare_inventory" states="draft" string="Start Inventory" type="object" class="oe_highlight" groups="stock.group_stock_user,pti_validation.pti_stock_adjustment"/>
            	</xpath>
				<!--    Validate Inventory     -->
				<xpath expr="//form/header/button[@name='action_done']" position="replace">
                	<button name="action_done" states="confirm" string="Validate Inventory" type="object" class="oe_highlight" groups="stock.group_stock_manager,pti_validation.pti_validate_adjustment"/>
                </xpath>
            </field>
    	</record>

		<!--  deleting group activate developer mode for menu inventory at date  -->
		<record model="ir.ui.menu" id="stock_account.menu_action_wizard_valuation_history">
			<field name="groups_id" eval="[(3,ref('base.group_no_one'))]"/>
		</record>
    </data>
</openerp>