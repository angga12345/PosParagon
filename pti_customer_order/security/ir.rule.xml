<openerp>
    <data>
        <!-- SALE ORDER INPUT -->
        <record id="co_user_sale_order_input_rule" model="ir.rule">
	        <field name="name">Input Customer Order</field>
	        <field ref="pti_customer_order.model_sale_order_input" name="model_id"/>
	        <field name="domain_force">[(1,'=',1),('dc_id','=',user.partner_id.dc_id.id)]</field>
	        <field name="groups" eval="[(4, ref('pti_branch.group_pti_branch_customer_order'))]"/>
	    </record>
	    
	    <record id="co_user_sale_order_line_input_rule" model="ir.rule">
	        <field name="name">Input Customer Sale Order Line</field>
	        <field ref="pti_customer_order.model_sale_order_line_input" name="model_id"/>
	        <field name="domain_force">[(1,'=',1),('order_id.dc_id','=',user.partner_id.dc_id.id)]</field>
	        <field name="groups" eval="[(4, ref('pti_branch.group_pti_branch_customer_order'))]"/>
	    </record>
    </data>
</openerp>