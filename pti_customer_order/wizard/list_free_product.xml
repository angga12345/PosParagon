<openerp>
    <data>
        <record id="free_product_form" model="ir.ui.view">
            <field name="name">free.product.form</field>
            <field name="model">sale.free.product</field>
            <field name="arch" type="xml">
                <form string="Transfer details" version="7">
                	<group string="Free products">
						<div class="oe_grey" colspan="4">
                        	<p>Add list free product</p>
                    	</div>
                    </group>
                 	<field name="sale_id" invisible="True"/>
                    <group>
                        <field name="item_ids" nolabel="1">
                            <tree string="Inventory Details" editable="bottom" >
                                <field name="free_product_line" invisible="1"/>
                                <field name="product_id"/>
                                <field name="name"/>
                                <field name="price_unit"/>
                                <field name="product_uom"/>
                                <field name="customer_lead" invisible="1"/>
                                <field name="product_uom_qty"/>
                            </tree>
                        </field>
                    </group>
                    <footer>
                        <button name="add_products" string="Add free product" type="object" class="oe_highlight"/>
                        or
                        <button string="_Cancel" class="oe_link" special="cancel" />
                    </footer>
                </form>
            </field>
        </record>
        
        <record id="action_free_product" model="ir.actions.act_window">
            <field name="name">Free Product</field>
            <field name="res_model">sale.free.product</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
           <field name="view_id" ref="free_product_form"/>
           <field name="target">new</field>
        </record>
    </data>
</openerp>