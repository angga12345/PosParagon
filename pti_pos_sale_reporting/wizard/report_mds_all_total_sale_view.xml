<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>      
        <record id="report_mds_all_total_sale_view" model="ir.ui.view">
            <field name="name">report.mds.all.total.sale.view</field>
            <field name="model">report.mds.all.total.sale</field>
            <field name="arch" type="xml">
               <form string="Laporan Total Penjualan MDS Nasional">
               		<sheet>
               			<label string=""/>  <!-- binding for inherited views -->
               			<group col="1">
               				<group>
               					<field name="filter" required="True"/>
               					<field name="brand_id" attrs="{'invisible':[('filter','in',('1',False))], 'required':[('filter','=','2')]}"/>
               				</group>
	            			<group col="2">
								<group >
								   <field name="date_from" required="1"/>	   
								  </group>  
		                        <group> 
								   <field name="date_to" required="1" invisible="0"/> 		
								</group>                	
		                    </group>
	                    </group>
	                    <group>
	                    	<field name="input_type" invisible="1"/>
	                    </group>              
	                    <field invisible="1" name="state_x"/>
	                    <newline/>    
	                    <group col="4" fill="0" attrs="{'invisible':[('state_x','!=','get')]}">
	                        <separator colspan="4" string="Generate to Excel is done. Download by click link below." attrs="{'invisible':[('state_x','=','choose')]}"/>
	                        <field name="name" invisible="1" width="100" attrs="{'invisible':[('state_x','=','choose')]}"/>
	                        <field name="data_x" nolabel="1" readonly="0" width="100" filename="name" attrs="{'invisible':[('state_x','=','choose')]}" 
	                        style="text-align:left;"/>
	                    </group>
	                    <footer attrs="{'invisible':[('state_x','=','get')]}">
	                        <button name="mds_all_sale_report" string="Generate XLS" type="object" class="oe_highlight"/>
	                        or
	                        <button string="Cancel" class="oe_link" special="cancel" />
	                    </footer>
               		</sheet>
                </form>
            </field>
        </record>
        
        <record id="report_mds_all_total_sale_action" model="ir.actions.act_window">
            <field name="name">Penj. Total Harian, Mingguan, Bulanan</field>
            <field name="res_model">report.mds.all.total.sale</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="report_mds_all_total_sale_view"/>
            <field name="target">new</field>
        </record>
        
        <menuitem
            id="menu_report_mds_all_total_sale_report" name="Penj. Total Harian, Mingguan, Bulanan"
    		action="report_mds_all_total_sale_action"
            parent="pti_pos_sale_reporting.menu_mds_nasional_config" sequence="1"/> 
        
    </data>
</openerp>
