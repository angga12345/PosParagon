<openerp>
    <data>
        <record id="route_2_steps_delivery" model="stock.location.route">
            <field name="name">2 Steps Delivery</field>
        </record>
        <record id="route_ndc_dc" model="stock.location.route">
            <field name="name">PTI ROUTES</field>
            <field name="active" eval="True"/>
            <field name="warehouse_selectable" eval="True"/>
        </record>
        <record id="stock_2_staging" model="procurement.rule">
            <field name="name">WH/Stock to WH/Staging</field>
            <field name="procure_method">make_to_stock</field>
            <field name="action">move</field>
            <field name="picking_type_id" ref="picking_goods"/>
            <field name="location_src_id" model="stock.location" search="[('complete_name','=','Physical Locations / NDC / Stock')]"/>
            <field name="location_id" ref="ndc_staging"/>
            <field name="route_id" ref="route_2_steps_delivery"/>
        </record>
        <record id="path_ndc_transit_quarantine_to_quarantine" model="stock.location.path">
            <field name="name">NDC/Transit Quarantine to NDC/Quarantine</field>
            <field name="route_id" ref="route_ndc_dc"/>
            <field name="location_from_id" ref="ndc_transit_quarantine"/>
            <field name="location_dest_id" ref="ndc_quarantine"/>
            <field name="picking_type_id" ref="picking_quarantine"/>
            <field name="active" eval="True"/>
        </record>
    </data>
</openerp>
