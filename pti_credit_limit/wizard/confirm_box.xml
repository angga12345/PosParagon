<openerp> 
    <data> 
        <record id="confirm_box_form" model="ir.ui.view">
             <field name="name">confirm_box.form</field> 
             <field name="model">confirm_box</field> 
             <field name="arch" type="xml"> 
                 <form string="Confirm">
                    <field name="message" nolabel="1"/> 
                    <footer>
                        <button name="continue_process" type="object" string="Continue" class="oe_highlight"/>
                    </footer> 
                 </form> 
            </field>
        </record>
    
        <record model="ir.actions.act_window" id="action_confirm_box">
            <field name="name">Confirm Box</field>
            <field name="res_model">confirm_box</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="confirm_box_form" />
            <field name="target">new</field>
        </record>
    </data>
</openerp>

