<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<template id="report_current_stock_document_free">
			<t t-call="report.html_container">	        
				<div class="page">
					<table style="font-family:'iceland';" class="table table-hovered">
						<tr>
							<td>Location </td>
							<td><span t-esc="data['warehouse_name']"/></td>
						</tr>
					</table>
					<br/>
					<table style="font-family:'iceland';font-size:16px;" width="100%" class="table table-bordered">
						<thead>
							<tr>
								<th style="text-align:center;width:80%;">Items</th>
								<th style="text-align:center;width:20%;">Qty</th>							
							</tr>
						</thead>
						<tbody>
							<t t-set="total_qty" t-value="0"></t>
							<tr t-foreach="get_lines(data['warehouse'])" t-as="quant">
								<td style="text-align:left;width:80%;"><span t-esc="quant['product']"/></td>
								<td style="text-align:right;width:20%;"><span t-esc="int(quant['qty'])"/></td>
								<t t-set="total_qty" t-value="total_qty+quant['qty']"/>
							</tr>
						</tbody>
						<tfoot>
							<tr>
								<td style="text-align:left;width:80%;"><b>Total</b> </td>
								<td style="text-align:right;width:20%;"><b><t t-esc="int(total_qty)"/></b></td>								
							</tr>
						</tfoot>
					</table>
				</div>
			</t>
		</template>
		
		
		<template id="pti_pos_stock_free.current_stock_report_free_view">
		    <t t-call="report.html_container">
		       <t t-call="pti_pos_stock_free.report_current_stock_document_free"/>
		    </t>
		</template>

	</data>
</odoo>