    	<record id="laporan_penjualan_per_transaksi_report_wizard_view" model="ir.ui.view">
            <field name="name">laporan.penjualan.per.transaksi.report.wizard.view</field>
            <field name="model">laporan.penjualan.per.transaksi.report.wizard</field>
            <field name="arch" type="xml">
                <form string="Current Bussiness Report" version="9.0">
                	<group>
						<field name="start_period" required="1"/>
						<field name="end_period" required="1"/>	 
						<field name="store" required="1"/>	 					
					</group>
					<field invisible="1" name="state_x"/>
