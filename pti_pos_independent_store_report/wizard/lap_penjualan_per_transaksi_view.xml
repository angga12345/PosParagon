                        <field name="name" nolabel="1" readonly="0" width="100" filename="name" attrs="{'invisible':'1'}"/>
                    </group>
					<footer>
                        <button string="Generate" name="generate_excel" type="object" class="oe_highlight"/>
                    </footer>
                </form>
            </field>
        </record>
    	
