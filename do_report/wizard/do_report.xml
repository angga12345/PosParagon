<openerp>
    <data>
    	<record id="deliver_report_form" model="ir.ui.view">
            <field name="name">view.deliver.report</field>
            <field name="model">do.report</field>
            <field name="arch" type="xml">
                <form string="Delivery Order">
                	<field name="company" string="Company"/>
                	<field name="dc_id" domain="[('is_dc','=',True)]" widget="selection" groups="pti_branch.group_pti_branch_finance_admin"/>
                	<field name="type" string="Move Type"/>
                	<field name="start_date"/> to <field name="end_date"/>
                	<field invisible="1" name="state_x"/>
                    <newline/>
                    <group col="4" fill="0" attrs="{'invisible':[('state_x','!=','get')]}">
                        <separator colspan="4" string="Generate to Excel done. Download by click link below" attrs="{'invisible':[('state_x','=','choose')]}"/>
                        <field name="name" invisible="1" width="100" attrs="{'invisible':[('state_x','=','choose')]}"/>
                        <field name="data_x" nolabel="1" readonly="0" width="100" filename="name" attrs="{'invisible':[('state_x','=','choose')]}"/>
                    </group>
                    <footer>
                        <button icon="gtk-print" string='Generate' name="create_do_report" type="object" attrs="{'invisible':[('state_x','=','get')]}"/>
                        <button string="Cancel" class="btn-default" special="cancel"/>
                    </footer>
               </form>
            </field>
        </record>
    	
        <record id="action_delivery_report" model="ir.actions.act_window">
            <field name="name">Delivery Order Report</field>
            <field name="res_model">do.report</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="deliver_report_form"/>
            <field name="target">new</field>
        </record>
        
    	<menuitem action="action_delivery_report" 
			          id="deliver_report_menuitem" 
			          name="Stock Moves Report"	
			          parent="stock.menu_warehouse_report" sequence="3"/> 
	</data>
</openerp>