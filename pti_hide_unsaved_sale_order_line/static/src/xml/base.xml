<templates>
    <t t-extend="ListView.row">
        <t t-jquery="td[class='oe_list_record_delete']" t-operation="replace">
            <t t-if="record.get('is_sale_order_line',false) == true">  
                <t t-if="record.get('is_saved') == true">  
                    <td t-if="options.deletable" class='oe_list_record_delete' width="13px">
                        <span name="delete" class="fa fa-trash-o"/>
                    </td>
                </t>
            </t>
            <t t-if="record.get('is_sale_order_line',false) != true">  
                <td t-if="options.deletable" class='oe_list_record_delete' width="13px">
                    <span name="delete" class="fa fa-trash-o"/>
                </td>
            </t>            
        </t>
    </t>

</templates>
