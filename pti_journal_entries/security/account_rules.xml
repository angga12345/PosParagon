<openerp>
	<data>
		<record id="account_journal_entries_dc_rule" model="ir.rule">
	        <field name="name">Journal Entries DC</field>
	        <field name="model_id" ref="account.model_account_move"/>
	        <field name="domain_force">['|',('dc_id','=', user.partner_id.dc_id.id),('journal_id.dc_id','=',user.partner_id.dc_id.id)]</field>
			<field name="groups" eval="[(4, ref('pti_branch.group_pti_branch_sales_admin_invoice'))]"/>
	    </record>
	    
	    <record id="account_journal_items_dc_rule" model="ir.rule">
	        <field name="name">Journal Items DC</field>
	        <field name="model_id" ref="account.model_account_move_line"/>
	        <field name="domain_force">['|',('move_id.dc_id','=', user.partner_id.dc_id.id),('move_id.journal_id.dc_id','=',user.partner_id.dc_id.id)]</field>
			<field name="groups" eval="[(4, ref('pti_branch.group_pti_branch_sales_admin_invoice'))]"/>
	    </record>
	    
	    <record id="inventory_adjustment_dc_rule" model="ir.rule">
	        <field name="name">Inventory Adjustment DC</field>
	        <field name="model_id" ref="stock.model_stock_inventory"/>
	        <field name="domain_force">['|',('location_id.dc_id','=',user.partner_id.dc_id.id),('location_id.this_for_all','=',True)]</field>
			<field name="groups" eval="[(4, ref('pti_branch.group_pti_branch_sales_admin_invoice'))]"/>
	    </record>
	</data>
</openerp>
