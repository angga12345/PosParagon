<openerp>
    <data>
    	<record model="ir.ui.view" id="rekap_penj_prod_wbh_nasional">
            <field name="name">rekap.penj.prod.wbh.nasional</field>
            <field name="model">rekap.penj.prod.wbh.nasional</field>
            <field name="arch" type="xml">
                <form string="Rekapitulasi Penjualan Produk WBH Nasional" version="9.0">
                	<group>
						<field name="start_period" required="1"/>
						<field name="end_period" required="1"/> 					
					</group>
					<field invisible="1" name="state_x"/>
                    <newline/>    
                    <group col="4" fill="0" attrs="{'invisible':[('state_x','!=','get')]}">
                        <separator colspan="4" string="Generate to Excel done. Download by click link below" attrs="{'invisible':[('state_x','=','choose')]}"/>
                        <field name="data_x" nolabel="1" readonly="0" width="100" filename="name" attrs="{'invisible':[('state_x','=','choose')]}"/>
                        <field name="name" nolabel="1" readonly="0" width="100" filename="name" attrs="{'invisible':[('state_x','=','choose')]}"/>
                    </group>
					<footer>
                        <button string="Generate" name="generate_excel_mds_sales" type="object" class="oe_highlight"/>
                    </footer>
                </form>
            </field>
        </record>
    	
        <record id="action_rekap_penj_prod_wbh_nasional" model="ir.actions.act_window">
            <field name="name">Laporan Rekapitulasi Penjualan Produk WBH Nasional</field>
            <field name="res_model">rekap.penj.prod.wbh.nasional</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>
        
        
    	<menuitem
            id="menu_rekap_penj_prod_wbh_nasional_report" name="Rekapitulasi Penjualan Produk WBH Nasional"
    		action="action_rekap_penj_prod_wbh_nasional"
            parent="pti_pos_sale_reporting.menu_wbh_nasional_config" sequence="11"/>
    </data>
</openerp>