<openerp>
    <data>
        <record id="picking_shipment_branch" model="ir.ui.view">
            <field name="name">picking.shipment.form</field>
            <field name="model">truck.picking.shipment</field>
             <field name="inherit_id" ref="pti_stock_report.view_picking_shipment_form"/>
            <field name="arch" type="xml">
                <field name="user_id" position="after">
                    <field name="dc_id" invisible="1"/>
                </field>
                <field name="picking_ids" position="attributes">
                    <attribute name="domain">
                        ['&amp;',
                            '|',
                            ('state_shipment', '=', False),
                            ('state_shipment', 'in', ('cancel','pending')),
                        '&amp;',
                            ('state', '=', 'done'),
                            '|',
                                ('location_dest_id.dc_id', '=', dc_id),
                                ('location_id.dc_id', '=', dc_id),
                        ]
                    </attribute>
                </field>
            </field>
        </record>
    </data>
</openerp>
