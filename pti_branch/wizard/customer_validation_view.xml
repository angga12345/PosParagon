<openerp>
    <data>

        <record id="view_partner_customer_validation" model="ir.ui.view">
            <field name="name">partner.customer.validation.form</field>
            <field name="model">partner.customer.validation</field>
            <field name="arch" type="xml">
                <form string="Customer Validation">
                    <footer>
                        <button string="Validate" name="get_validate" type="object" class="btn-primary"/>
                        <button string="Cancel" class="btn-default" special="cancel"/>
                    </footer>
               </form>
            </field>
        </record>

        <record id="action_view_customer_validation" model="ir.actions.act_window">
            <field name="name">Customer Validation</field>
            <field name="res_model">partner.customer.validation</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="groups_id" eval="[(6, 0, [ref('pti_branch.group_pti_branch_finance_admin') ])]" />
            <field name="view_id" ref="view_partner_customer_validation"/>
            <field name="target">new</field>
        </record>

        <record model="ir.values" id="action_account_move_correction">
            <field name="model_id" ref="pti_branch.model_res_partner" />
            <field name="name">Validate</field>
            <field name="key2">client_action_multi</field>
            <field name="value" eval="'ir.actions.act_window,' +str(ref('action_view_customer_validation'))" />
            <field name="key">action</field>
            <field name="model">res.partner</field>
        </record>
    </data>
</openerp>