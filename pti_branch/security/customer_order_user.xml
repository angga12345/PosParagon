<openerp>
    <data>
    	<!-- =============================MENU ACCESS=============================== -->	
    	<!-- here -->
		<!-- =============================RECORD RULES=============================== -->
		<!-- PARTNER -->
        <record id="co_user_partner_rule" model="ir.rule">
	        <field name="name">COU customers</field>
	        <field ref="account.model_res_partner" name="model_id"/>
	        <field name="domain_force">['|','|',('dc_id','=',user.partner_id.dc_id.id),('is_dc','=',True),('this_for_all','=',True)]</field>
		<field name="groups" eval="[(4, ref('pti_branch.group_pti_branch_customer_order'))]"/>
	    </record>
	    
		<!-- SALE ORDER -->
        <record id="co_user_sale_order_rule" model="ir.rule">
	        <field name="name">COU Customer Order</field>
	        <field ref="sale.model_sale_order" name="model_id"/>
	        <field name="domain_force">[(1,'=',1),('dc_id','=',user.partner_id.dc_id.id)]</field>
	        <field name="groups" eval="[(4, ref('pti_branch.group_pti_branch_customer_order'))]"/>
	    </record>
	    
	    <record id="co_user_sale_order_line_rule" model="ir.rule">
	        <field name="name">COU Customer Sale Order Line</field>
	        <field ref="sale.model_sale_order_line" name="model_id"/>
	        <field name="domain_force">[(1,'=',1),('order_id.dc_id','=',user.partner_id.dc_id.id)]</field>
	        <field name="groups" eval="[(4, ref('pti_branch.group_pti_branch_customer_order'))]"/>
	    </record>
	    
	    <!-- ACCOUNT INVOICE -->
	    <record id="co_user_account_invoice_rule" model="ir.rule">
	        <field name="name">COU Account Invoice</field>
	        <field ref="account.model_account_invoice" name="model_id"/>
	        <field name="domain_force">[(1,'=',1),('dc_id','=',user.partner_id.dc_id.id)]</field>
	        <field name="groups" eval="[(4, ref('pti_branch.group_pti_branch_customer_order'))]"/>
	    </record>
	    
	    <record id="co_user_account_invoice_rule" model="ir.rule">
	        <field name="name">COU Account Invoice Line</field>
	        <field ref="account.model_account_invoice_line" name="model_id"/>
	        <field name="domain_force">[(1,'=',1),('invoice_id.dc_id','=',user.partner_id.dc_id.id)]</field>
	        <field name="groups" eval="[(4, ref('pti_branch.group_pti_branch_customer_order'))]"/>
	    </record>
	    
	    <record id="quants_co_rule" model="ir.rule">
	        <field name="name">CO Quants</field>
	        <field ref="stock.model_stock_quant" name="model_id"/>
	        <field name="domain_force">
	        	[
	        	'|',
	        	('location_id.this_for_all','=',True),
	        	('location_id.dc_id','=',user.partner_id.dc_id.id)
	        	]
	        </field>
	        <field name="groups" eval="[(4, ref('pti_branch.group_pti_branch_customer_order'))]"/>
	    </record> 
	    
    </data>
</openerp>
