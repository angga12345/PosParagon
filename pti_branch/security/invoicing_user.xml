<openerp>
    <data>
    	<!-- =============================MENU ACCESS=============================== -->	
    	<!-- here -->
		<!-- =============================RECORD RULES=============================== -->
		<!-- PARTNER -->
        <record id="partner_inv_rule" model="ir.rule">
	        <field name="name">INV customers</field>
	        <field ref="account.model_res_partner" name="model_id"/>
	        <field name="domain_force">['|','|',('dc_id','=',user.partner_id.dc_id.id),('is_dc','=',True),('this_for_all','=',True)]</field>
		<field name="groups" eval="[(4, ref('pti_branch.group_pti_branch_sales_admin_invoice'))]"/>
	    </record>
	    
	    <!-- ACCOUNT INVOICE -->
	    <record id="invoice_user_account_invoice_rule" model="ir.rule">
	        <field name="name">INV Account Invoice</field>
	        <field ref="account.model_account_invoice" name="model_id"/>
	        <field name="domain_force">[(1,'=',1),('dc_id','=',user.partner_id.dc_id.id)]</field>
	        <field name="groups" eval="[(4, ref('pti_branch.group_pti_branch_sales_admin_invoice'))]"/>
	    </record>
	    
	    <record id="invoice_user_account_invoice_line_rule" model="ir.rule">
	        <field name="name">INV Account Invoice Line</field>
	        <field ref="account.model_account_invoice_line" name="model_id"/>
	        <field name="domain_force">[(1,'=',1),('invoice_id.dc_id','=',user.partner_id.dc_id.id)]</field>
	        <field name="groups" eval="[(4, ref('pti_branch.group_pti_branch_sales_admin_invoice'))]"/>
	    </record>
	    
		
	    
	    <!-- ACCOUNT JOURNAL -->
	    <record id="invoice_user_account_journal_rule" model="ir.rule">
	        <field name="name">INV Journal</field>
	        <field ref="account.model_account_journal" name="model_id"/>
	        <field name="domain_force">['|',('dc_id','=',user.partner_id.dc_id.id),('this_for_all','=',True)]</field>
	        <field name="groups" eval="[(4, ref('pti_branch.group_pti_branch_sales_admin_invoice'))]"/>
	    </record>
	    
	    <record id="invoice_user_account_bank_statement_rule" model="ir.rule">
	        <field name="name">INV Bank Statement</field>
	        <field ref="account.model_account_bank_statement" name="model_id"/>
	        <field name="domain_force">['|',('journal_id.dc_id','=',user.partner_id.dc_id.id),('journal_id.this_for_all','=',True)]</field>
	        <field name="groups" eval="[(4, ref('pti_branch.group_pti_branch_sales_admin_invoice'))]"/>
	    </record>
	    
	    <record id="invoice_user_account_bank_statement_line_rule" model="ir.rule">
	        <field name="name">INV Bank Statement Line</field>
	        <field ref="account.model_account_bank_statement_line" name="model_id"/>
	        <!-- <field name="domain_force">['|',('journal_id.dc_id','=',False), ('journal_id.dc_id','=',user.partner_id.dc_id.id)]</field> -->
	        <field name="domain_force">[(1,'=',1)]</field>
	        <field name="groups" eval="[(4, ref('pti_branch.group_pti_branch_sales_admin_invoice'))]"/>
	    </record>
	    
    </data>
</openerp>
