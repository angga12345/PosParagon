<openerp>
    <data>
    	<!-- =============================MENU ACCESS=============================== -->	
    	<!-- here -->
		<!-- =============================RECORD RULES=============================== -->
		<!-- PARTNER -->
        <record id="delivery_user_partner_rule" model="ir.rule">
	        <field name="name">DO customers</field>
	        <field ref="account.model_res_partner" name="model_id"/>
	        <field name="domain_force">['|','|',('dc_id','=',user.partner_id.dc_id.id),('is_dc','=',True),('this_for_all','=',True)]</field>
		<field name="groups" eval="[(4, ref('pti_branch.group_pti_branch_delivery_order'))]"/>
	    </record>
	    
		<!-- LOCATION -->
	    <record id="delivery_user_stock_location_rule" model="ir.rule">
	        <field name="name">DO Personal Location</field>
	        <field ref="stock.model_stock_location" name="model_id"/>
	        <field name="domain_force"></field>
	        <field name="groups" eval="[(4, ref('pti_branch.group_pti_branch_delivery_order'))]"/>
	    </record>
		
	    <record id="quants_do_rule" model="ir.rule">
	        <field name="name">DO Quants</field>
	        <field ref="stock.model_stock_quant" name="model_id"/>
	        <field name="domain_force">
	        	[
	        	'|',
	        	('location_id.this_for_all','=',True),
	        	('location_id.dc_id','=',user.partner_id.dc_id.id)
	        	]
	        </field>
	        <field name="groups" eval="[(4, ref('pti_branch.group_pti_branch_delivery_order'))]"/>
	    </record> 
	    
	    <!-- WAREHOUSE 
	    <record id="delivery_user_stock_warehouse_rule" model="ir.rule">
	        <field name="name">DO Personal Stock Warehouse</field>
	        <field ref="stock.model_stock_warehouse" name="model_id"/>
	        <field name="domain_force">['|',('dc_id','=',False),('dc_id','=',user.partner_id.dc_id.id)]</field>
	        <field name="groups" eval="[(4, ref('pti_branch.group_pti_branch_delivery_order'))]"/>
	    </record>
	    -->
	    
	    <record id="delivery_user_stock_picking_rule" model="ir.rule">
	        <field name="name">DO Personal Stock Picking Warehouse</field>
	        <field ref="stock.model_stock_picking" name="model_id"/>
	        <field name="domain_force">
	        	[
	        		'|',
	        			('picking_type_id.warehouse_id.dc_id','=',user.partner_id.dc_id.id),
		        		'|',
		        		('picking_type_id.warehouse_id', 'in', [wh.id for wh in user.partner_id.warehouse_ids]),
		        		('picking_type_id.is_sjb_operation', '=', True),		        		
	        	]	
	        </field>
	        <field name="groups" eval="[(4, ref('pti_branch.group_pti_branch_delivery_order'))]"/>
	    </record>
	    
	    <record id="delivery_user_stock_picking_type_rule" model="ir.rule">
	        <field name="name">DO Personal Stock Picking Type</field>
	        <field ref="stock.model_stock_picking_type" name="model_id"/>
	        <field name="domain_force">
	        	[
	        		'|',
	        			('warehouse_id.dc_id','=',user.partner_id.dc_id.id),
		        		'|',
			        	('warehouse_id', 'in', [wh.id for wh in user.partner_id.warehouse_ids]),
		        		('is_sjb_operation', '=', True),
	        	]
	        </field>
	        <field name="groups" eval="[(4, ref('pti_branch.group_pti_branch_delivery_order'))]"/>
	    </record>
    </data>
</openerp>
