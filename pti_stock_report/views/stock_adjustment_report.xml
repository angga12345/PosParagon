<openerp>
   <data>
      <template id="report_delivery_note">
         <t t-foreach="docs" t-as="o">
            <div class="row">
               <t t-call="pti_do_report.report_delivery_note_body"/>
            </div>
         </t>
      </template>
      
	  <template id="pti_report_inventory">
        <t t-call="report.html_container">
            <div class="page">
               <t t-foreach="docs" t-as="o">
                  <div class="container" position="fixed">
                     <div class="col-xs-5 col-xs-offset-7" style="font-weight: bold; font-size: 24px; margin-bottom: 5px;">
                        Stock Adjustment
                     </div>
					 <div class="col-xs-6">
					 </div>
                     <div class="col-xs-6">
                        <div class="col-xs-6" style="text-align: left">Doc: </div>
                        <div class="col-xs-6">
                           <span t-field="o.name"/>
                           <![CDATA[&nbsp;]]>
                        </div>
                        <div class="col-xs-6" style="text-align: left">Location : </div>
                        <div class="col-xs-6">
                           <span t-field="o.location_id.complete_name"/>
                           <![CDATA[&nbsp;]]>
                        </div>
                        <div class="col-xs-6" style="text-align: left">Date : </div>
                        <div class="col-xs-6">
                           <span t-field="o.date"/>
                           <![CDATA[&nbsp;]]>
                        </div>
                     </div>
                     <div/>
                     <br/>
                     <table class="table table-bordered" style="border-color: #004269;">
                        <thead>
                           <tr>
							<td style="width: 5%;  ">No</td>
							<td style="width: 10%; ">Code</td>
							<td style="width: 65%; ">Material Description</td>
							<td style="width: 10%; ">Old quantity</td>
							<td style="width: 10%; ">Real Quantity</td>
							<td style="width: 10%; ">Different</td>
                           </tr>
                        </thead>
                        <tbody class="sale_tbody">
                        	<t t-set="i" t-value="1"/>
                           <tr t-foreach="o.line_ids" t-as="line">
                          	  <td><span t-esc="i"/></td>
                              <td> <span t-field="line.product_id.default_code"/> </td>
                              <td> <span t-field="line.product_id.name"/> </td>
                              <td> <span t-esc="'{0:,.0f}'.format((line.theoretical_qty))"/> </td>
                              <td> <span t-esc="'{0:,.0f}'.format((line.product_qty))"/> </td>
                              <td>
                              	  <t t-set="different" t-value="line.theoretical_qty - line.product_qty"/>
                              	  <span t-esc="'{0:,.0f}'.format((different))"/>
                              </td>
                              <t t-set="i" t-value="i+1"/>
                           </tr>
                        </tbody>
                     </table>
                     
                  </div>
               </t>
            </div>
			<div class="footer">
		    	<div style="margin-top:30px;" class="row">
		        	<div class="col-xs-2  pull-center">
		            	<center>
		            		<small style="margin-top:20px;">
								<span>Page </span><span class="page" /> of <span class="topage" />
							</small>
						</center>
		        	</div>
		    	</div>
			</div>
         </t>
      </template>
   </data>
</openerp>
