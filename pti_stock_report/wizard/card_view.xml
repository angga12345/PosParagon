<openerp>
    <data>      
        <record id="print_timber_report_view" model="ir.ui.view">
            <field name="name">print_timber_report_view</field>
            <field name="model">stock.card</field>
            <field name="arch" type="xml">
               <form string="Print Stock Card" version="7.0">
                    <group>
						   <field name="product_ids" required="1" options='{"no_open": True,"no_create": 1, "no_create_edit": 1}'/>    
						   <field name="date_from" required="1"/>
						   <field name="date_to" required="1"/>	                 
                    </group>
                    <field invisible="1" name="state_x"/>
                    <newline/>    
                    <group col="4" fill="0" attrs="{'invisible':[('state_x','!=','get')]}">
                        <separator colspan="4" string="Generate to Excel done. Download by click link below" attrs="{'invisible':[('state_x','=','choose')]}"/>
                        <field name="name" invisible="1" width="100" attrs="{'invisible':[('state_x','=','choose')]}"/>
                        <field name="data_x" nolabel="1" readonly="0" width="100" filename="name" attrs="{'invisible':[('state_x','=','choose')]}"/>
                    </group>
                    <footer>
                        <button name="ctx_excel_report" string="Generate" type="object" class="oe_highlight"/>
                        or
                        <button string="Cancel" class="oe_link" special="cancel" />
                    </footer>
                </form>
            </field>
        </record>
        <record id="report_timber_wiz" model="ir.actions.act_window">
            <field name="name">Report Stock Card</field>
            <field name="res_model">stock.card</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="print_timber_report_view"/>
            <field name="target">new</field>
        </record>
    </data>
</openerp>
