<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
		<record id="loyalty_rule_time_view_form" model="ir.ui.view">
    		<field name="name">loyalty.rule.time.view.form</field>
    		<field name="model">loyalty.rule</field>
            <field name="inherit_id" ref="pos_loyalty.view_loyalty_rule_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='sku_number_period']" position="after">
                	<field name="use_hour_rules"/>
                </xpath>
            	<xpath expr="//form/group[1]" position="after">
                	<separator string="Rule Times" colspan="4"  attrs="{'invisible': [('use_hour_rules','=',False)]}"/>
                	<field name="rule_time_ids" attrs="{'invisible': [('use_hour_rules','=',False)]}">
                		<tree editable="bottom">
	                		<field name="day"/>
	                		<field name="start_hour" widget="float_time"/>
	                		<field name="end_hour" widget="float_time"/>
                		</tree>
                	</field>
                </xpath>
            </field>
    	</record>
	</data>
</openerp>