<openerp>
    <data>    	
    	<record model="ir.ui.view" id="report_edc_wbh_nasional">
            <field name="name">report.rekap.edc.wbh.nasional.view</field>
            <field name="model">report.rekap.edc.wbh.nasional</field>
            <field name="arch" type="xml">
                <form string="Rekap EDC WBH Nasional" version="9.0">
                	 
                	<group>
						<field name="start_period" required="1"/>
						<field name="end_period" required="1"/>	 					
					</group>
					
                    <field invisible="1" name="state_x"/>
                    <newline/>    
                    <group col="4" fill="0" attrs="{'invisible':[('state_x','!=','get')]}">
                        <separator colspan="4" string="Generate to Excel done. Download by click link below" attrs="{'invisible':[('state_x','=','choose')]}"/>
                        <field name="data_x" nolabel="1" readonly="0" width="100" filename="name" attrs="{'invisible':[('state_x','=','choose')]}"/>
                        <field name="name" nolabel="1" readonly="0" width="100" filename="name" attrs="{'invisible':[('state_x','=','choose')]}"/>
                    </group>
                                 	                    
					<footer>
                        <button string="Generate" name="generate_excel_wbh_nasional" type="object" class="oe_highlight"/>
                    </footer>
                </form>
            </field>
        </record>
    	    	
        <record id="action_edc_wbh_nasional" model="ir.actions.act_window">
            <field name="name">Rekap EDC</field>
            <field name="res_model">report.rekap.edc.wbh.nasional</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>
         
    	<menuitem
            id="menu_inventory_report" name="Rekap EDC"
    		action="action_edc_wbh_nasional" 
            parent="pti_pos_sale_reporting.menu_wbh_nasional_config" sequence="22"/> 
    </data>
</openerp>