<openerp>
    <data>

        <record id="pickingsortorder" model="ir.ui.view">
            <field name="name">pickingsortorder.tree</field>
            <field name="model">picking.sort.order</field>
            <field name="arch" type="xml">
                <tree string="Picking list">
                    <field name="name"/>
                    <field name="location_id"/>
                    <field name="dc_id"/>
                </tree>
            </field>
        </record>

        <record id="picking_sort_order_form" model="ir.ui.view">
    		<field name="name">picking.sort.order.form</field>
    		<field name="model">picking.sort.order</field>
            <field name="arch" type="xml">
				<form string="Picking Sort Order">
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="location_id"/>
                            </group>
                            <group>
                                <field name="dc_id" domain="[('is_dc', '=', True)]"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Bill">
                                <field name="picking_sort_order_lines" context="{'default_picking_sort_order_id': id}">
                                    <tree editable="bottom">
                                        <field name="index"/>
                                        <field name="product_id"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
    	</record>

        <record id="picking_sort_order_act" model="ir.actions.act_window">
            <field name="name">Picking Sort Order</field>
            <field name="res_model">picking.sort.order</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
              <p class="oe_view_nocontent_create">
                Click here to create a picking sort order.
              </p><p>
                You can set product sequence on report warehouse.
              </p>
            </field>
        </record>
        <menuitem id="picking_sort_order_menuitem" name="Picking Sort Order" parent="stock.menu_stock_config_settings" sequence="7"
                  action="picking_sort_order_act" groups="stock.group_stock_manager,stock.group_stock_user"/>
    </data>
</openerp>