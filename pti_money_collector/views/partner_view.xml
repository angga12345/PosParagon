<openerp>
    <data>
            <!-- Add DC  in res partner -->
        <record id="collector_res_partner_form" model="ir.ui.view">
            <field name="name">collector.res.partner.form</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <field name="category_id" position="after">
                   <field name="is_collector"/>
                </field>
            </field>
        </record>
        <record id="collector_res_partner_filter" model="ir.ui.view">
            <field name="name">collector.res.partner.filter</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_res_partner_filter"/>
            <field name="arch" type="xml">
                <filter name="supplier"  position="after">
                   <filter string="Collectors" name="collector" domain="[('is_collector','=',1)]"/>
                </filter>
            </field>
        </record>
        
        <record id="res_partner_collector_view_buttons" model="ir.ui.view">
            <field name="name">res.partner.collector.view.buttons</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form" />
            <field name="priority" eval="20"/>
            <field name="arch" type="xml">
                <div name="button_box" position="inside">
                    <button class="oe_stat_button" type="action" name="%(pti_money_collector.action_view_collector_bonus_report_form)d" 
                        attrs="{'invisible': [('is_collector', '=', False)]}"
                        icon="fa-usd"
                        string="Bonus Report">
                    </button>     
                </div>
            </field>
        </record>
    </data>
</openerp>