<openerp>
	<data>
		<record id="view_collector_bonus_report_form" model="ir.ui.view">
            <field name="name">collector.bonus.report.form</field>
            <field name="model">collector.bonus.report</field>
			<field name="arch" type="xml">
				<form string="Bonus Report">
	                <group>
                        <group>
                            <field name="use_filter"/>
                        </group>
                        <group>
                            <field name="date_from" 
                                attrs="{'required': [('use_filter', '=', True)], 'invisible': [('use_filter', '=', False)],}"/>
                            <field name="date_to" 
                                attrs="{'required': [('use_filter', '=', True)], 'invisible': [('use_filter', '=', False)],}"/>
                        </group>
                    </group>
                    <footer>
                        <button string='Show' name="action_show_collector_lines" type="object" class="btn-primary"/>
                        <button string="Cancel" class="btn-default" special="cancel"/>
                    </footer>
				</form>
			</field>
		</record>
		
		
	    <record id="action_view_collector_bonus_report_form" model="ir.actions.act_window">
            <field name="name">Bonus Report</field>
            <field name="res_model">collector.bonus.report</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_collector_bonus_report_form"/>
            <field name="target">new</field>
        </record>
	</data>
</openerp>