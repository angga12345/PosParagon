<openerp>
	<data>
	
		<record id="update_assign_collector_view" model="ir.ui.view">
			<field name="name">update.assign.collector.wizard.view</field>
            <field name="model">assign.collector.wizard</field>
			<field name="arch" type="xml">
				<form string="Update collector">
					<group>
						
						<field name="collector_id"/>
						
					</group>		
					<footer>
						<button name="assign_collector" string="assign collector" type="object" class="btn-primary" />
						or
						<button string="Cancel" class="oe_link" special="cancel" />
					</footer>			
				</form>
			</field>
		</record>
			
		<record id="action_assign_collector" model="ir.actions.act_window">
			<field name="name">update collector</field>
            <field name="res_model">assign.collector.wizard</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="update_assign_collector_view"/>
            <field name="target">new</field>
		</record>
		
	</data>
</openerp>