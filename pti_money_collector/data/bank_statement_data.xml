<openerp>
    <data>
    	<record id="sequence_bank_statement" model="ir.sequence">
            <field name="name">Account Bank Statement sequence</field>
            <field name="code">account.bank.statement</field>
            <field name="prefix">BANK/%(range_year)s/%(range_month)s/</field>
            <field eval="1" name="number_next"/>
            <field eval="1" name="number_increment"/>
            <field eval="True" name="use_date_range"/>
            <field name="padding">4</field>
        </record>
        
    	<record id="sequence_bank_statement_cash" model="ir.sequence">
            <field name="name">Account Cash Statement sequence</field>
            <field name="code">account.bank.statement</field>
            <field name="prefix">CASH/%(range_year)s/%(range_month)s/</field>
            <field eval="1" name="number_next"/>
            <field eval="1" name="number_increment"/>
            <field eval="True" name="use_date_range"/>
            <field name="padding">4</field>
        </record>
    </data>
</openerp>